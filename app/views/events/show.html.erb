<div class="section">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-1">

        <div class="thumbnail">
          <%= image_tag(@event.image, class: "img-responsive") %>
        </div>
        <!-- <div class="page-header">
          <h1><%= @event.title %></h1>
        </div> -->
      </div>

      <div class="col-md-3">
        <!-- <div class="panel panel-default"> -->
        
        <h3><%= @event.eventdate.strftime("%B") %></h3>
        <h4 class="text-muted"><%= @event.eventdate.strftime("%d") %></h4>
      
        <h2><%= @event.title %></h2>
        <h4 class="text-muted">by <%= @event.company %></h4>
      
        <hr>
        <% if @event.price == 0 %>
          <h2>Free!</h2>
        <% else %>
          <h2><%= number_to_currency(@event.price, unit: "â‚±") %></h2>
        <% end %>
        
        <!-- </div> -->
      </div>
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-1">
    <h4><b>Description</b></h4>
      <%= simple_format @event.details %>
    <br>
    <h4><b>Website:</b> <%= link_to @event.link, @event.link %></h4>

    <br>
    <h4><b>Requirements to join</b></h4>
    <%= simple_format @event.requirement %>
    



    </div>

    <div class="col-md-3">
      <h3><b>Application Period</b></h3>
      From <%= @event.applicationstart.strftime("%B %d") %> - To <%= @event.applicationend.strftime("%B %d, %Y") %>
    </div>

  </div>
</div>


